{
  "name": "capstone",
  "version": "1.0.0",
  "description": "SOC Investigation Tool",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "client": "npm run dev --prefix client",
    "server": "npm run dev --prefix server",
    "count": "cd server/count-fakeula && . venv/bin/activate && python main.py -d",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run count\"",
    "dev:no-count": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md}\"",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "soc",
    "security",
    "investigation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1"
  },
  "lint-staged": {
    "*.{js,css,md,jsx,scss,ts,tsx}": "prettier --write"
  },
  "dependencies": {
    "axios": "^1.8.1",
    "dotenv": "^16.4.7"
  },
  "prettier": {
    "plugins": [
      "./client/node_modules/prettier-plugin-tailwindcss/dist/index.mjs"
    ]
  }
}